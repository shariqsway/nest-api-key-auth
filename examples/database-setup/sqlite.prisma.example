// SQLite Example
// This is an example Prisma schema for SQLite

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // URL is provided via DATABASE_URL environment variable (Prisma 7 requirement)
  // Example: DATABASE_URL="file:./dev.db"
}

model ApiKey {
  id               String   @id @default(cuid())
  name             String
  keyPrefix        String
  hashedKey        String
  scopes           String   // SQLite stores arrays as JSON string
  expiresAt        DateTime?
  revokedAt        DateTime?
  lastUsedAt       DateTime?
  ipWhitelist      String   // SQLite stores arrays as JSON string
  rateLimitMax     Int?
  rateLimitWindowMs Int?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([keyPrefix, hashedKey])
  @@index([keyPrefix])
  @@index([expiresAt])
  @@map("api_keys")
}

// Note: For SQLite, arrays are stored as JSON strings
// The adapter will handle serialization/deserialization

