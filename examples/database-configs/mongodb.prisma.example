// MongoDB Configuration Example (using Prisma)
// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  // URL is provided via DATABASE_URL environment variable (Prisma 7 requirement)
  // Example: DATABASE_URL="mongodb://user:password@localhost:27017/mydb"
}

model ApiKey {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  keyPrefix        String
  hashedKey        String
  scopes           String[]
  expiresAt        DateTime?
  revokedAt       DateTime?
  lastUsedAt       DateTime?
  ipWhitelist      String[]
  rateLimitMax     Int?
  rateLimitWindowMs Int?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([keyPrefix, hashedKey])
  @@index([keyPrefix])
  @@index([expiresAt])
  @@map("api_keys")
}

